<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context="org.cocos2dx.cpp.SplashScreenActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@drawable/splash_screen_background"
        android:scaleType="fitXY"
        android:src="@drawable/splash_screen_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@drawable/splash_screen_background" />

    <TextView
        android:id="@+id/one_time_extraction_text"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:text="@string/content_extraction"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/mPercentText"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <ProgressBar
        android:id="@+id/extraction_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="441dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/mPercentText"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="0 %"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/extraction_progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/extraction_progress_bar" />

</android.support.constraint.ConstraintLayout>
